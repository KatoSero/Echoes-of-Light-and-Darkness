:: StoryStylesheet [stylesheet]

body {
  /* Background style */
  background-color: #0e0e0e;
  background-image:
    url('https://cdn.midjourney.com/60eff0a5-8c81-44ac-8e05-68b3be51e789/0_0.png');

  /* Fit and keep the background in place */
  background-size: cover;
  background-position: center;
  background-attachment: fixed;

  /* Text style */
  color: #c9c9c9;
  font-family: 'Cormorant Garamond', serif;
  text-justify: center;
}

tw-story { 
  background-color: #0000;
  padding: 10px 10px;
}

tw-passage {
  /* Background and container style */
  background: #000A;
  box-shadow: 5px 10px 20px #000C;

  /* Border */
  border: 4px solid #232b4e;
  border-radius: 10px; /* Corner radius */

  max-width: 800px;
  margin: 2% auto;
  padding: 25px;
}

tw-sidebar {
  display: none;
}

/* Change style for small windows */
@media (max-width: 600px) {
  tw-passage { 
    border: none; 
    border-radius: 0px; /* Corner radius */
    margin: 0px;
  }
  tw-story { padding: 0px; }
}

/* Image styling */
tw-story img {
  /* Border and shadow */
  border: 4px solid #232b4e;
  border-radius: 20px;
  box-shadow: 5px 10px 20px #000C;

  /* Size and paddings */
  width: 100%;
  min-height: 200px;
  padding: 4px;
}

/* Button styling */
tw-link, .tw-button {
  color: #c9c9c9;
  background-color: #1b2647;
  font-weight: bold;
  font-family: inherit;
  text-align: left;

  /* Border */
  border: 2px solid #232b4e;
  border-radius: 8px;
  box-shadow: 5px 10px 20px #000C;

  /* Layout and size */
  display: inline-block;
  margin: 10px 0;
  padding: 10px 20px;
  transition: all 0.3s ease;
}

/* Button styling on hover */
tw-link:hover, .tw-button:hover {
  color: #e1e1e1;
  border-color: #be6797;
  background-color: #571a35;
  cursor: pointer;
}

/* Button styling while pressing */
tw-link:active, .tw-button:active {
  box-shadow: none;
  transform: scale(0.98);
}
